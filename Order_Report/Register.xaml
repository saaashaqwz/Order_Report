<Window x:Class="Order_Report.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Order_Report"
        mc:Ignorable="d"
        Title="Registration" Height="400" Width="300" Background="#d7bbaa">
    <Grid>
        <StackPanel>
            <TextBlock Text="Login:" Margin="86,100,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <TextBox x:Name="tbLogin" VerticalAlignment="Top" HorizontalAlignment="Center" Width="140" Height="23" Margin="0,5,0,0" />

            <TextBlock Text="Password:" Margin="86,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <PasswordBox x:Name="pbPassword" VerticalAlignment="Top" HorizontalAlignment="Center" Height="23" Width="140" Margin="0,5,0,0" Background="#8e7364"/>

            <Button Content="Register" HorizontalAlignment="Center" Margin="0,40,0,0" Width="100" Height="25" Click="Button_Register_Click" />
        </StackPanel>
    </Grid>
</Window>
 