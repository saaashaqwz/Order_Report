<Window x:Class="Order_Report.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Order_Report"
        mc:Ignorable="d"
        Title="Authorization" Height="400" Width="300" Background="#d7bbaa">
    <Grid>
        <StackPanel>
            <Label Content="Login:" Margin="86,80,0,0"/>
            <TextBox x:Name="tbLogin" HorizontalAlignment="Center" Width="140" Height="23" />
            <Label Content="Password:" Margin="86,0,0,0"/>
            <PasswordBox x:Name="pbPassword" HorizontalAlignment="Center" Width="140" Height="23" Background="#8e7364" />

            <Button Content="Ok" HorizontalAlignment="Center" Margin="0,40,0,0" Width="100" Height="25" Click="Button_Ok_Click"/>
            <Button Content="Register" HorizontalAlignment="Center" Margin="0,10,0,0" Width="100" Height="25" Click="Button_Register_Click"/>

        </StackPanel>
    </Grid>
</Window>
