<Window x:Class="Order_Report.AddImage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Order_Report"
        mc:Ignorable="d"
         Title="Добавление изображения" Height="414" Width="600" Background="#d7bbaa">
    <Grid>
        <Image x:Name="image" Width="200" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="192,50,0,0"/>
        <TextBox x:Name="FilePathTextBox" Width="300" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,260,0,0"/>

        <Button Click="SelectImage" Content="Выбрать изображение" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,300,0,0" Width="204"/>

        <Button Click="UploadImage" Content="Загрузить в базу" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,340,0,0" Width="204"/>
    </Grid>
</Window>
