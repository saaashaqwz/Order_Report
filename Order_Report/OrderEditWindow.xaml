<Window x:Class="Order_Report.OrderEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Order_Report"
        mc:Ignorable="d"
         Title="OrderEditWindow" Height="300" Width="350" Background="#d7bbaa">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Address:" />
            <TextBox Name="tbAddress" Text="{Binding Address}" Width="330"/>
            <Label Content="Payment:" />
            <TextBox Name="tbPayment" Text="{Binding Payment}" Width="330" />
            <Label Content="Status:" />
            <TextBox Name="tbStatus" Text="{Binding Status}" Width="330" />
            <Button Content="Save" Margin="0,30,0,0" Width="75" HorizontalAlignment="Center" Click="Button_Save_Click" />
        </StackPanel>
    </Grid>
</Window>
